<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiAudioBookPlayer.ViewModel"
             x:Class="MauiAudioBookPlayer.Views.ManageScanFolders"
             IsBusy="{Binding Loading}"
             Title="ManageScanFolders">
    <VerticalStackLayout>
        <Button Text="SelectFolder" Clicked="SelectFolder_Clicked"/>
        <Button Text="Scan" Command="{Binding ScanCommand}"/>
        <CollectionView 
                    ItemsSource="{Binding Folders}"
                    SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" CornerRadius="10" Margin="5">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Path}"/>
                            <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScanFolderViewModel}}, Path=DeleteCommand}"
                                CommandParameter="{Binding Path}"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>